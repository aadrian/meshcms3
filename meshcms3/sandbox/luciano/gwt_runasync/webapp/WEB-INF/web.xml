<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>MeshCMS</display-name>
  <description>Open Source Content Management System</description>
  <context-param>
    <param-name>cmsDir</param-name>
    <param-value>/cms</param-value>
  </context-param>
  <filter>
    <filter-name>GWTDev</filter-name>
    <filter-class>com.cromoteca.meshcms.server.toolbox.GWTDevFilter</filter-class>
    <init-param>
      <param-name>codeServerPort</param-name>
      <param-value>9997</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>MeshCMS</filter-name>
    <filter-class>com.cromoteca.meshcms.server.core.HitFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ServerPages</filter-name>
    <filter-class>com.cromoteca.meshcms.server.webview.ServerPageFilter</filter-class>
    <init-param>
      <param-name>basePackage</param-name>
      <param-value>com.cromoteca.meshcms.server.pages</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>GWTDev</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>MeshCMS</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ServerPages</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>
  <servlet>
    <servlet-name>MeshCMS-External</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.ExternalSiteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MeshCMS-Admin</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.ServicesImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MeshCMS-Upload</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.Upload</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>download</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.DownloadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>zipdownload</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.DownloadZipServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MeshCMS-Thumbnail</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.ThumbnailServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AvatarServlet</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.AvatarServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ConcatServlet</servlet-name>
    <servlet-class>com.cromoteca.meshcms.server.services.ConcatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MeshCMS-External</servlet-name>
    <url-pattern>/meshcms/external/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MeshCMS-Admin</servlet-name>
    <url-pattern>/meshcms/admin/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MeshCMS-Upload</servlet-name>
    <url-pattern>/meshcms/upload/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>download</servlet-name>
    <url-pattern>/meshcms/download/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>zipdownload</servlet-name>
    <url-pattern>/meshcms/zipdownload/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MeshCMS-Thumbnail</servlet-name>
    <url-pattern>/meshcms/thumbnails/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AvatarServlet</servlet-name>
    <url-pattern>/meshcms/avatar/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ConcatServlet</servlet-name>
    <url-pattern>/meshcms/concat/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
